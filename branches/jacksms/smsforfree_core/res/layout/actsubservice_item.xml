
<RelativeLayout android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/actsubservice_item" 
	android:layout_gravity="center_vertical">
	<LinearLayout
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_toLeftOf="@+id/services_list_service_icon"
		android:layout_alignWithParentIfMissing="true"
	>
		<TextView android:id="@+id/service_name"
		android:paddingLeft="10dip"
		android:layout_width="fill_parent" android:layout_height="fill_parent" 
		android:layout_gravity="center_vertical"
		android:text="service_name" android:textSize="20sp"  
		android:gravity="left|center_vertical"></TextView>
	</LinearLayout>
	
	<ImageView android:layout_height="60dip" android:layout_width="60dip" 
	android:paddingRight="10dip" android:id="@+id/services_list_service_icon" 
	android:layout_alignParentRight="true"></ImageView>
</RelativeLayout>

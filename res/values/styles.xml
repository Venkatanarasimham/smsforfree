<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Base for all activities root LinearLayout (the first you use) -->
	<style name="common_layoutBackground">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
<!--		<item name="android:background">#FFbfc4cc</item>-->
	</style>

	<!-- Main layout - assign to ScrollArea and use common_layoutActivityAreaScrollable
		 for LinearLayout inside the ScrollArea -->
	<style name="common_scrollActivityArea">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">#FFbfc4cc</item>
	</style>
	<style name="common_layoutActivityAreaScrollable">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">6dip</item>
	</style>

	<!-- Main layout - assign for a LinearLayout without scrollbar -->
	<style name="common_layoutActivityAreaNotScrollable" parent="@style/common_layoutActivityAreaScrollable">
		<item name="android:background">#FFbfc4cc</item>
	</style>

	<style name="common_btnAction">
		<item name="android:layout_width">100dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#000</item>
		<!-- Text position -->
		<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>

	<style name="common_EditText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="common_CheckBox">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="common_TextView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="common_Spinner">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="common_ImageView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="common_WebView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

</resources>
